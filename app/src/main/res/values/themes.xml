<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="MyTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textColorPrimary">@color/font</item>
        <item name="android:textColorSecondary">@color/font</item>

        <item name="android:textColorTertiary">@color/font</item>

        <item name="android:textColorHint">@color/font</item>
        <item name="android:fontFamily">@font/blinkmacsystemfontmedium</item>


        <item name="android:windowBackground">@color/background</item>



    </style>

    <style name="BasicButtonStyle">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/buttonstyle</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="Theme.Material3.Light.NoActionBar">
        <!-- Establecer el color de fondo de la barra de la aplicaciÃ³n y la barra de estado como transparentes -->
        <item name="android:backgroundTint"> @color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>